# Default settings to be used by diary scripts. 

# The directories used by the diary scripts.
export dir_diary="$HOME/.diary"
export dir_data="$dir_diary/data"
export dir_entries="$dir_data/entries"
export dir_checklists="$dir_data/checklists"
export dir_cache="$dir_diary/cache"
export dir_wordcounts="$dir_cache/wordcounts"

# Editors to be used by different scripts.
export diary_edit_default_editor="vim '+set spell' '+syntax off'"
export diary_new_entry_default_editor="vim '+set spell' '+syntax off' '+startinsert'"

